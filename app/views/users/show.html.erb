<div class='container'>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <%if  current_user%>
    <div class="col-md-6">
      <h3>Username:<%=@user.username%></h3>
    </div>
  <%else%>
    <h3>Please log in</h3>
    <%=link_to 'Login',login_path%>
  <%end%>
  <%=link_to 'Go Home!', root_path%>
</div>
